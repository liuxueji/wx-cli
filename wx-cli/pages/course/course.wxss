page{
  background: #eee;
}
.searchOuterView{
    padding:15rpx;
  }
  .searchInnerView {
    text-align: center;
    line-height: 52rpx;
    width: 720rpx;
    height: 58rpx;
    background-color: #eee;
    border: 2rpx solid #ececec;
    border-radius: 8rpx;
    box-sizing: border-box;
  }
  
  .searchInnerView > image{
    width:36rpx;
    height: 36rpx;
    vertical-align: middle;
  }
  
  .searchInnerView > text{
    font-size: 24rpx;
    color: #aaa;
    vertical-align: middle;
  }

/* 导航 */
.navView{
    display: flex;
}
.navView > view{
    height: 88rpx;
    line-height: 88rpx;
    background: skyblue;
    flex-grow: 1;
    text-align: center;
}

.navView > view:nth-child(2){
    border-left: 2rpx solid #fff;
    border-right: 2rpx solid #fff;
}

.navView image{
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}

.navView text{
    font-size: 30rpx;
    color: #fff;
    vertical-align: middle;
}

/* 轮播图 */
swiper{
    height: 400rpx;
  }
  
  swiper  image{
    width:750rpx;
    height: 400rpx;
  }

/* 推荐课程 */
.courseView{
  padding: 0 20rpx;
}

.courseTitleView{
  height: 108rpx;
  line-height: 108rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
}

.courseListView{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.courseListView image{
  width: 346rpx;
  height: 220rpx;
}

.courseItemView{
  width: 346rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.moreView{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #aaa;
  position: relative;
}

.arrow{
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 38rpx;
}