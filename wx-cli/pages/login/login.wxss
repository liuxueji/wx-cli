page{
    background: #eee;
}

/* 输入框样式 */
.inputView{
    background: #fff;
    padding: 0 30rpx;
}

.inputView > input{
    height: 88rpx;
}

.inputView > input:nth-child(1){
    border-bottom: 1rpx solid #eee;
}
/* 按钮区域 */
.buttonView{
    width: 690rpx;
    margin: 80rpx auto 0;
}

.buttonView > button{
    width: 680rpx;
    height: 88rpx;
    font-size: 36rpx;
}


.buttonView > button:nth-child(2){
    margin-top: 50rpx;
}

.buttonView > view{
    font-size: 28rpx;
    color: skyblue;
    text-align: right;
}